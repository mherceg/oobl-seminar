
@{
    ViewBag.Title = "ImpressionDetails";
}

@Styles.Render("~/Content/Map.css")

<h2>Impression details</h2>

<div class="row thumbnail">
    <div class="col-xs-4">
        <div id="map"></div>
    </div>
    <div class="col-xs-8">
        <h4>From user: Username</h4> <hr />
        Impression about this place.
    </div>
</div>

<h4>Comments on this impression</h4>
<div class="row thumbnail" style="padding: 10px">
    <div class="col-lg-11 col-lg-push-1">
        <ul class="list-group">
            <li class="list-group-item">User: Comment</li>
            <li class="list-group-item">User: Comment</li>
            <li class="list-group-item">User: Comment</li>
            <li class="list-group-item">User: Comment</li>
        </ul>

        <h4>Add comment</h4>
        @using (Html.BeginForm("AddComment", "Event", FormMethod.Post))
            {

            <input type="hidden" value="0" name="id" />
            <div class="form-group">
                <input type="text" class="form-control" name="text" placeholder="Comment" required>
            </div>
                <div class="form-group">
                    <input type="submit" value="Send" class="btn btn-primary" />
                </div>
        }
    </div>
</div>

<script>
    function initMap() {
        var uluru = { lat: -25.363, lng: 131.044 };
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 4,
            center: uluru
        });
        var marker = new google.maps.Marker({
            position: uluru,
            map: map
        });
    }
</script>
<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDS2vUZXxyTNyg4Kx_UlRimVwz0V_VLMaQ&callback=initMap">
</script>

